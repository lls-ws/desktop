#!/bin/sh
# Script to install apps on Lubuntu Desktop
#
# Autor: Leandro Luiz
# email: lls.homeoffice@gmail.com

PATH=.:$(dirname $0):$PATH
. lib/update.lib		|| exit 1

check_root "$1"

apps_install()
{
	
	bash bin/apps_install.sh apps
	bash bin/apps_install.sh google
	bash bin/apps_install.sh anydesk
	bash bin/apps_install.sh kvantum
	
}

util_conf()
{
	bash bin/util_config.sh sudo
	bash bin/util_config.sh hosts
	bash bin/util_config.sh scripts
}

user_conf()
{
	
	su lls -c "bash bin/user_config.sh lxqt"
	su lls -c "bash bin/user_config.sh geany"
	su lls -c "bash bin/user_config.sh aliases"
	su lls -c "bash bin/user_config.sh audacious"

}

daemon_conf()
{
	
	bash bin/daemon_config.sh sddm
	bash bin/daemon_config.sh transmission
	
}

apps_remove()
{
	
	bash bin/apps_install.sh remove
	
}

case "$1" in
  	apps)
		apps_install
		;;
	remove)
		apps_remove
		;;
	daemon)
		daemon_conf
		;;
  	util)
		util_conf
		;;
	user)
		user_conf
		;;
  	all)
		apps_install
		apps_remove
		daemon_conf
		util_conf
		user_conf
		;;
	*)
		echo "Use: $0 {all|apps|remove|daemon|util|user}"
		exit 1
		;;
esac
