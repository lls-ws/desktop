# Get Finance
alias finance-lls='bash finance-lls.sh'

# Connect into a Clound
alias connect_funchal='qterminal -e ssh -i ~/.ssh/id_rsa lls@funchal.lls.net.br &'
alias connect_app='qterminal -e ssh -i ~/.ssh/id_rsa lls@app.lls.net.br &'
alias connect_dell='qterminal -e ssh -i ~/.ssh/id_rsa wanda@dell.lls.net.br &'

# WEB Server Log
alias tomcat-log='geany /var/lib/tomcat9/logs/*.log &'
alias maria-log='geany /var/lib/mysql/error.log &'
alias iptables-log='cat /var/log/syslog | grep netfilter | tail > /tmp/iptables.log && geany /tmp/iptables.log &'

lls-log() {
	maria-log
	tomcat-log
	iptables-log
}

# Get a Zip GitHub Repository
alias git_zip_lls-src='cd ~; curl -L https://github.com/lls-ws/lls-src/archive/master.zip --output ~/.lls-src/lls-src-$(date +%F).zip; ls -al ~/.lls-src/lls-src-$(date +%F).zip'

# Get a GitHub Repository
alias git_clone_desktop='cd ~; git clone https://github.com/lls-ws/desktop.git; cd ~/desktop; ls'
alias git_clone_lls-src='cd ~; git clone https://github.com/lls-ws/lls-src.git; git_zip_lls-src; cd ~/lls-src; ls'
alias git_clone_lls-ws='cd ~; git clone https://github.com/lls-ws/lls-ws.github.io.git; cd ~/lls-ws; ls'
alias git_clone_iptv='cd ~; git clone https://github.com/lls-ws/iptv.git; cd ~/iptv; ls'

# Update a GitHub Repository
alias git_upload_desktop='clear; cd ~/desktop; sudo ~/cloud/bin/git_conf.sh remote desktop; cd ~; ls'
alias git_upload_cloud='clear; cd ~/cloud; sudo ~/cloud/bin/git_conf.sh remote cloud; cd ~; ls'
alias git_upload_lls-src='clear; cd ~/lls-src; sudo ~/cloud/bin/git_conf.sh remote lls-src; cd ~; ls'
alias git_upload_lls-ws='clear; cd ~/lls-ws.github.io; sudo ~/cloud/bin/git_conf.sh remote lls-ws.github.io; cd ~; ls'
alias git_upload_iptv='clear; cd ~/iptv; sudo ~/cloud/bin/git_conf.sh remote iptv; cd ~; ls'

# Backup a user profile
alias backup_user='clear; cd ~/desktop; bash ~/desktop/util/user/backup.sh; cd ~'

# Transmission
alias t-status='clear; sudo service transmission-daemon status'
alias t-start='sudo service transmission-daemon start; t-status'
alias t-stop='sudo service transmission-daemon stop; t-status'
alias t-restart='sudo service transmission-daemon reload; t-status'
alias t-list='transmission-remote -n 'transmission:transmission' -l'
alias t-basicstats='transmission-remote -n 'transmission:transmission' -st'
alias t-fullstats='transmission-remote -n 'transmission:transmission' -si'

# SSH
alias ssh-status='clear; sudo service ssh status'
alias ssh-start='sudo service ssh start; ssh-status'
alias ssh-stop='sudo service ssh stop; ssh-status'
alias ssh-restart='ssh-stop; ssh-start'

# NFS
alias nfs-status='clear; sudo service nfs-server status'
alias nfs-start='sudo service nfs-server start; nfs-status'
alias nfs-stop='sudo service nfs-server stop; nfs-status'
alias nfs-restart='nfs-stop; nfs-start'

# Minidlna
alias dlna-status='clear; sudo service minidlna status'
alias dlna-start='sudo service minidlna start; dlna-status'
alias dlna-stop='sudo service minidlna stop; dlna-status'
alias dlna-restart='dlna-stop; dlna-start'
alias dlna-reload='sudo service minidlna force-reload; ls -al /var/cache/minidlna/'

# Services
alias services-show='service --status-all'
alias services-load='systemctl -t service --state=active'
alias services-boot='systemctl list-unit-files --state=enabled'
alias services-list='ls /etc/systemd/system/multi-user.target.wants'

if [ "$USER" = "lls" ]; then
	
	rmdir 'Imagens' 'Downloads' 'Documentos' 'Modelos' 'Músicas' 'Público' 'Vídeos' 2> /dev/null

	rmdir 'Desktop' 'Documents' 'Music' 'Public' 'Videos' 'Pictures' 'Templates' 2> /dev/null

	rm -rf '.cache' '.dosbox' '.gnome' '.local' 'snap' 2> /dev/null
	rm -f '.fehbg' 2> /dev/null
	rm -f ~/*.csv 2> /dev/null
	
fi

ls
