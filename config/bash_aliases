# Print my public IP
alias myip='curl ipinfo.io/ip && echo'

# Comands for Transmission
alias t-start='sudo service transmission-daemon start'
alias t-stop='sudo service transmission-daemon stop'
alias t-status='sudo service transmission-daemon status'
alias t-reload='sudo service transmission-daemon reload'
alias t-list='transmission-remote -n 'transmission:transmission' -l'
alias t-basicstats='transmission-remote -n 'transmission:transmission' -st'
alias t-fullstats='transmission-remote -n 'transmission:transmission' -si'

# Record a Stream Radio
alias record='sudo stream_record.sh uturn'

# Change Video Brightness
alias change_brightness='sudo change_brightness.sh'

# Connect into a Clound
alias cloud_connect='sudo cloud_connect.sh'

# Get Wifi Password
alias crack='sudo crack.sh'

# Open a Terminal
alias terminal='terminal.sh'

# Get a GitHub Repository
alias git_dataflex='git clone https://github.com/lls-ws/dataflex.git'
alias git_desktop='git clone https://github.com/lls-ws/desktop.git'
alias git_cloud='git clone https://github.com/lls-ws/cloud.git'

rmdir 'Área de Trabalho' 'Música' 'Público' 'Vídeos' 2> /dev/null
rmdir 'Imagens' 'Downloads' 'Documentos' 2> /dev/null

rm -r '.cache' '.dosbox' '.gnome' '.local' 'snap' 2> /dev/null
rm '.fehbg' 2> /dev/null
